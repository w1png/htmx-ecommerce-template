package components

import "github.com/w1png/go-htmx-ecommerce-template/utils"

templ NavbarButton(text, href, replace_url string) {
	<a
		class={ "text-2xl hover:text-gray-600 underline whitespace-nowrap", templ.KV("text-gray-500", utils.GetUrlFromContext(ctx) == href || utils.GetUrlFromContext(ctx) == replace_url) }
		href={ templ.SafeURL(replace_url) }
		hx-get={ href }
		hx-replace-url={ string(templ.SafeURL(replace_url)) }
	>
		{ text }
	</a>
}
